
<%if(locals.user){%>
<div class="container">
    <main>
      <div class="py-5 text-center">
        <h2>Your Cart</h2>
        <p class="lead">Thank you for choosing our consulting services!</p>
      </div>
  
      <div class="row g-5  d-flex justify-content-center">
        <div class="col-md-5 col-lg-4 order-md-last">
          <h4 class="d-flex justify-content-between align-items-center mb-3">
            <span class="text-primary">Services</span>
          </h4>
          <ul class="list-group mb-3">
            <%for(service of services){%>
            <li class="list-group-item my-2 d-flex justify-content-between lh-sm">
              <div>
                <h6 class="my-0"><%=service.head%></h6>
                <small class="text-body-secondary"><%=service.content%></small>
              </div>
              <span  class="text-body-secondary"><%=service.price%>₹</span>
              <a href="/checkout/delete/<%=service.id%>">
                <i class="fa-solid fa-trash" style="margin-left: 12px; cursor: pointer;"></i>
              </a>
            </li>
            <%}%> 

            <li class="list-group-item d-flex justify-content-between">
              <span>Total (₹)</span>
              <strong><%=total%> <small>₹</small></strong>
            </li>
          </ul>
          <a href="" class="d-flex justify-content-center">
            <button class="btn btn-primary">Pay Now</button>
          </a>
        </div>
      </div>
    </main>
  </div>
  <%}else{%>
    <div class="justify-content-center align-items-center d-flex flex-column p-5">
        <h1 class="my-5">Please Login First</h1>
        <a  href="/users/login">
            <button class="btn btn-primary">Login</button>
        </a>
    </div>
    <%}%>